<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CovidTracker.Views.Components.CardView">
    <Frame CornerRadius="20" Margin="20,20,20,5" Padding="0">
        <Grid BackgroundColor="#f5f5f5" Padding="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <StackLayout 
                BackgroundColor="#363636"
                Padding="15"
                VerticalOptions="StartAndExpand"
                Grid.Row="0">
                <Label 
                    x:Name="innerTitle" 
                    TextColor="White" 
                    HorizontalOptions="CenterAndExpand"
                    FontSize="Title"
                    FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Grid.Row="1">
                <Label 
                    x:Name="innerContent" 
                    TextColor="Black"
                    FontSize="Body"
                    Padding="20"/>
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>